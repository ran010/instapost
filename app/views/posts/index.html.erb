<% @posts.each do |post| %>
  <%= image_tag post.user.photo %>
  <br>
  <%= post.user.name %>
  <br>
  <%= image_tag post.photo %>
  <br>
  <%= post.description %>
  <!-- add this line below -->
  <br>
  <%= link_to 'View Post', post_path(post.id) %>
  <% if post.user == current_user %>
    <%= link_to 'Edit Post', edit_post_path(post.id) %>
    <br>
    <%= link_to 'Delete Post', post_path(post.id), method: :delete %>
  <% end %>
  <br>
    <% post.comments.each do |comment| %>
     <div class="panel panel-default">
    <div class="panel-body">
  <p><%= User.find(comment.user_id).name %> <%= comment.text %></p>
  <% if comment.user == current_user %>
    <%= link_to 'Delete', post_comment_path(post_id: post.id, id: comment.id), method: :delete, class: 'btn btn-sm btn-danger' %>
    </div>
    </div>
  <% end %>
<% end %>
  
   <% if user_signed_in? %>
  <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
    <%= f.input :text, label: 'Comment', placeholder: 'Add a comment...' %>
    <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
<% end %>